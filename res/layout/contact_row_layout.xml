<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center" >
    
        <TextView
            android:id="@+id/textItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize = "24sp" 
            android:textColor="#0077AB"
            android:gravity= "center"
            android:paddingBottom="6dp"
            android:paddingTop = "10dp"/>
         
        <RelativeLayout
            android:layout_below="@id/textItem"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom = "15dp">
            
            
	        <RelativeLayout
	        android:id="@+id/call_layout"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="30dp"
		    android:layout_marginBottom = "15dp">
	            
		        <ImageButton 
		             android:id="@+id/call_button"
		   			 android:src="@drawable/phone_icon" 
		    		 android:layout_width="70dp"
		    		 android:layout_height="70dp"
		    		 android:layout_gravity="center"
		    		 android:background="@null"
		    		 android:scaleType="fitCenter"/>
		        
		        <TextView android:id="@+id/call_button_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_below="@+id/call_button"
		            android:text="C A L L"
		            android:textSize = "12sp"
		            android:layout_centerInParent="true"/>
	        
	        </RelativeLayout>
	        
	        
	        
	        <RelativeLayout
		        android:id="@+id/email_layout"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:layout_marginLeft="30dp"
			    android:layout_marginBottom = "15dp"
			    android:layout_toRightOf="@id/call_layout">
	        
		        <ImageButton 
		             android:id="@+id/email_button"
		   			 android:src="@drawable/mail_icon" 
		    		 android:layout_width="70dp"
		    		 android:layout_height="70dp" 
		    		 android:background="@null"
		    		 android:scaleType="fitCenter"/>
		        
		        <TextView 
		            android:id="@+id/email_button_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_below="@+id/email_button"
		            android:text="E M A I L"
		            android:textSize = "12sp"
		            android:layout_centerInParent="true"/>
	        
	        </RelativeLayout>
	        
	  </RelativeLayout>
        
        
</RelativeLayout>
